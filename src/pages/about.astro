---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About MTN Mud - 40+ Years of Drilling Fluids Excellence',
  description: 'Learn about Mountain Mud Service & Supply - your trusted partner for drilling fluids and mud engineering across the Rockies since 1983.',
};
---

<Layout metadata={metadata}>
  <!-- Page Hero ******************* -->

  <Hero
    tagline="Home / About"
  >
    <Fragment slot="title">
      About <span class="text-primary dark:text-white">Mountain Mud</span>
    </Fragment>
  </Hero>

  <!-- Company Story ******************* -->

  <Content
    id="company-story"
    columns={2}
    items={[]}
    image={{
      src: '~/assets/images/102A9044.jpg',
      alt: 'MTN Mud Timeline',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">Four Decades of Service Excellence</h2>
      <p class="text-lg text-muted mb-6">
        Since our founding over 40 years ago, Mountain Mud Service & Supply has built a reputation as the most reliable drilling fluids provider in U.S. land drilling. What started as a family-run operation has grown into a comprehensive drilling fluids company with stock points across the United States, yet we've never lost our commitment to personalized service and integrity.
      </p>
      <p class="text-lg text-muted">
        Under current ownership since January 1, 2006, we've maintained an impeccable safety record with zero lost time accidents while expanding our capabilities and service areas. Today, we're the Powder River Basin's only full-service drilling fluid supply company, serving operations from the Rockies to Texas.
      </p>
    </Fragment>
  </Content>

  <!-- Mission & Vision ******************* -->

  <Features2
    title="Our Purpose"
    columns={2}
    items={[
      {
        title: 'Our Mission',
        description:
          'To deliver exceptional, customer-specific service in the drilling fluids industry by combining performance, economics, safety, and cutting-edge technology.',
        icon: 'tabler:target',
      },
      {
        title: 'Our Vision',
        description:
          'To be the most trusted and reliable drilling fluids partner across the Rocky Mountain region and beyond, known for safety, innovation, and unwavering commitment to customer success.',
        icon: 'tabler:eye',
      },
    ]}
  />

  <!-- Core Values ******************* -->

  <Steps2
    title="Our Core Values"
    subtitle="The principles that guide our operations and relationships with partners across the energy sector."
    items={[
      {
        title: 'Service Excellence',
        description:
          'We go above and beyond to ensure every customer receives exceptional, personalized service that exceeds expectations.',
      },
      {
        title: 'Partnership & Relationships',
        description:
          'Building long-term partnerships based on trust, integrity, and mutual success in the drilling industry.',
      },
      {
        title: 'Team & Family',
        description:
          'Our team is our greatest asset. We foster a family-like culture of respect, support, and shared success.',
      },
      {
        title: 'Safety',
        description:
          'Zero lost time accidents since 2006. Safety is not just a priorityâ€”it\'s our way of doing business every day.',
      },
      {
        title: 'Innovation',
        description:
          'Embracing cutting-edge technology and continuous improvement to deliver the best solutions to our customers.',
      },
    ]}
  />

  <!-- Why Choose Us ******************* -->

  <Features2
    title="Why Choose MTN Mud"
    tagline="Our Advantages"
    columns={2}
    items={[
      {
        title: 'Experience',
        description: 'Over 40 years serving the drilling industry',
        icon: 'tabler:check',
      },
      {
        title: 'Reliability',
        description: '24/7 availability with our private fleet',
        icon: 'tabler:check',
      },
      {
        title: 'Safety',
        description: 'Zero lost time accidents since 2006',
        icon: 'tabler:check',
      },
      {
        title: 'Innovation',
        description: 'Advanced mud lab capabilities',
        icon: 'tabler:check',
      },
      {
        title: 'Partnership',
        description: 'Treating every customer as a valued partner',
        icon: 'tabler:check',
      },
      {
        title: 'Inventory',
        description: 'Massive stock levels ensuring immediate availability',
        icon: 'tabler:check',
      },
    ]}
  />

</Layout>
