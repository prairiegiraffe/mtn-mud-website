---
import Layout from '~/layouts/PageLayout.astro';

// Image imports
import modernConferenceRoom from '~/assets/images/new/Modern Conference Room.webp';

const metadata = {
  title: 'Contact Us - Get Expert Support 24/7 | MTN Mud',
  description:
    'Contact MTN Mud for drilling fluids expertise and support. Available 24/7 at 307-682-8688. Headquarters in Gillette WY, with locations in Cheyenne WY and Williston ND.',
};
---

<Layout metadata={metadata}>
  <!-- SECTION 1: HERO -->
  <section class="relative bg-charcoal-900 overflow-hidden min-h-[600px] md:min-h-[700px]">
    <!-- Background Image -->
    <div
      class="absolute inset-0 bg-cover bg-center bg-no-repeat"
      style={`background-image: url('${modernConferenceRoom.src}');`}
    >
    </div>
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-charcoal-900/60"></div>
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-charcoal-900/80 via-charcoal-900/70 to-charcoal-900"></div>

    <div class="container mx-auto px-10 py-32 md:py-48 max-w-7xl relative z-10">
      <div class="max-w-3xl">
        <div
          class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-6 uppercase tracking-wider"
        >
          Get in Touch
        </div>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-black mb-8 text-white leading-tight tracking-tight">
          Let's Talk About<br />Your Project
        </h1>
        <p class="text-xl md:text-2xl text-warm-gray-200 leading-relaxed mb-10">
          Have questions about our drilling fluid services, products, or capabilities? Need immediate technical support?
          Want to discuss a custom solution for your next project? We're here to help—24 hours a day, 7 days a week.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a class="btn style2" href="#contact-form">Send Us a Message <i class="ri-arrow-right-up-line"></i></a>
          <a class="btn style6" href="tel:307-682-8688">Call 307-682-8688 <i class="ri-arrow-right-up-line"></i></a>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 2: CONTACT INFO & FORM -->
  <section id="contact-form" class="bg-charcoal-900 py-10 px-4 sm:px-6 md:px-10">
    <div class="container mx-auto max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
        <!-- Left Column - Contact Information (40%) -->
        <div class="lg:col-span-2 space-y-6">
          <div>
            <h3 class="text-3xl font-black mb-4 text-white uppercase tracking-tight">Contact Information</h3>
            <p class="text-warm-gray-200 leading-relaxed">
              Whether you're an existing partner or exploring drilling fluids solutions for the first time, our team is
              ready to answer your questions and provide expert guidance.
            </p>
          </div>

          <!-- Headquarters -->
          <div
            class="bg-charcoal-800 p-8 rounded-2xl shadow-soft-lg border border-white/10 hover:border-safety-orange/50 transition-all"
          >
            <div
              class="inline-block bg-safety-orange text-white px-3 py-1 rounded-lg text-xs font-black mb-4 uppercase tracking-wider"
            >
              Headquarters
            </div>
            <h4 class="text-2xl font-black mb-6 text-white uppercase tracking-tight">Gillette, WY</h4>

            <div class="space-y-4 text-warm-gray-200">
              <div class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-safety-orange mt-0.5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <p class="font-bold text-white text-sm uppercase tracking-wider mb-1">Address</p>
                  <p>103 E. Lincoln St.</p>
                  <p>Gillette, WY 82716</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-safety-orange mt-0.5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                <div>
                  <p class="font-bold text-white text-sm uppercase tracking-wider mb-1">Phone</p>
                  <a href="tel:307-682-8688" class="text-safety-orange hover:underline font-bold text-lg"
                    >307-682-8688</a
                  >
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-safety-orange mt-0.5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="font-bold text-white text-sm uppercase tracking-wider mb-1">Hours</p>
                  <p class="font-black text-safety-orange">24/7 Support Available</p>
                  <p class="text-sm text-warm-gray-400">Office: Mon-Fri, 8:00 AM - 5:00 PM MT</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Additional Locations -->
          <div class="bg-charcoal-800 p-8 rounded-2xl shadow-soft-lg border border-white/10">
            <h4 class="text-xl font-black mb-6 text-white uppercase tracking-tight">Additional Locations</h4>

            <div class="space-y-4 text-warm-gray-200">
              <div>
                <p class="font-bold text-white mb-1">Cheyenne, WY</p>
                <p class="text-sm text-warm-gray-400 italic">Address to be provided</p>
              </div>

              <div>
                <p class="font-bold text-white mb-1">Williston, ND</p>
                <p class="text-sm text-warm-gray-400 italic">Address to be provided</p>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="bg-charcoal-800 p-8 rounded-2xl shadow-soft-lg border border-white/10">
            <h4 class="text-xl font-black mb-4 text-white uppercase tracking-tight">Connect With Us</h4>
            <p class="text-warm-gray-200 mb-6 text-sm">
              Follow us on social media for industry insights, company updates, and drilling fluids tips
            </p>

            <div class="flex gap-3">
              <a
                href="https://www.facebook.com/mtnmud"
                target="_blank"
