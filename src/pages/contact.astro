                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </a>

              <a
                href="https://www.linkedin.com/company/mountainmud/"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white hover:bg-safety-orange transition-all"
                aria-label="LinkedIn"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                  ></path>
                </svg>
              </a>

              <a
                href="https://www.tiktok.com/@mtn_mud"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white hover:bg-safety-orange transition-all"
                aria-label="TikTok"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"
                  ></path>
                </svg>
              </a>

              <a
                href="https://www.youtube.com/@MTN_MUD"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white hover:bg-safety-orange transition-all"
                aria-label="YouTube"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                  ></path>
                </svg>
              </a>

              <a
                href="https://linktr.ee/MTN_MUD"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center text-white hover:bg-safety-orange transition-all"
                aria-label="LinkTree"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M13.511 5.853l4.005-4.117 2.325 2.381-4.201 4.005h5.909v3.305h-5.937l4.229 4.108-2.325 2.334-5.741-5.769-5.741 5.769-2.325-2.325 4.229-4.108H2V8.122h5.909L3.708 4.117l2.325-2.381 4.005 4.117V0h3.473v5.853zM10.038 16.16h3.473v7.842h-3.473V16.16z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Right Column - Contact Form (60%) -->
        <div class="lg:col-span-3">
          <div class="bg-charcoal-800 p-10 rounded-2xl shadow-soft-lg border border-white/10">
            <h3 class="text-3xl font-black mb-8 text-white uppercase tracking-tight">Send Us a Message</h3>

            <form id="contactForm" class="space-y-6">
              <div>
                <label for="name" class="block text-white font-bold mb-2 text-sm uppercase tracking-wider">
                  Name <span class="text-safety-orange">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  placeholder="Your name"
                  class="w-full px-4 py-3 border-2 border-warm-gray-600 bg-charcoal-700 text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-safety-orange focus:border-safety-orange transition-all placeholder-warm-gray-400"
                />
              </div>

              <div>
                <label for="company" class="block text-white font-bold mb-2 text-sm uppercase tracking-wider"
                  >Company</label
                >
                <input
                  type="text"
                  id="company"
                  name="company"
                  placeholder="Company name"
                  class="w-full px-4 py-3 border-2 border-warm-gray-600 bg-charcoal-700 text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-safety-orange focus:border-safety-orange transition-all placeholder-warm-gray-400"
                />
              </div>

              <div>
                <label for="email" class="block text-white font-bold mb-2 text-sm uppercase tracking-wider">
                  Email Address <span class="text-safety-orange">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="your.email@example.com"
                  class="w-full px-4 py-3 border-2 border-warm-gray-600 bg-charcoal-700 text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-safety-orange focus:border-safety-orange transition-all placeholder-warm-gray-400"
                />
              </div>

              <div>
                <label for="phone" class="block text-white font-bold mb-2 text-sm uppercase tracking-wider"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  placeholder="(555) 123-4567"
                  class="w-full px-4 py-3 border-2 border-warm-gray-600 bg-charcoal-700 text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-safety-orange focus:border-safety-orange transition-all placeholder-warm-gray-400"
                />
              </div>

              <div>
                <label for="message" class="block text-white font-bold mb-2 text-sm uppercase tracking-wider">
                  Message <span class="text-safety-orange">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  placeholder="Please provide details about your inquiry. For technical support, include rig location and nature of the issue. For service requests, let us know your project timeline and specific needs."
                  class="w-full px-4 py-3 border-2 border-warm-gray-600 bg-charcoal-700 text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-safety-orange focus:border-safety-orange transition-all placeholder-warm-gray-400"
                ></textarea>
              </div>

              <!-- Form Messages -->
              <div id="contactFormMessage" class="hidden"></div>

              <div>
                <button
                  type="submit"
                  id="contactFormSubmit"
                  class="w-full bg-safety-orange hover:bg-safety-orange/90 text-white font-bold py-4 px-8 rounded-[10px] uppercase tracking-wider transition-all flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <span id="contactButtonText">Send Message</span>
                  <i id="contactButtonIcon" class="ri-arrow-right-up-line"></i>
                </button>
              </div>

              <div class="text-sm text-warm-gray-300 text-center pt-6 border-t-2 border-warm-gray-600">
                <p>
                  For urgent technical support or after-hours assistance, please call our 24/7 hotline at
                  <a href="tel:307-682-8688" class="text-safety-orange font-bold hover:underline">307-682-8688</a>.
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 3: INTERACTIVE MAP -->
  <section class="bg-warm-gray p-10">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-12">
        <div
          class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-4 uppercase tracking-wider"
        >
          Our Locations
        </div>
        <h2 class="text-3xl md:text-4xl font-black mb-6 text-charcoal-900 tracking-tight">Find Us on the Map</h2>
        <p class="text-lg text-charcoal-600 max-w-3xl mx-auto font-medium">
          Strategically located across Wyoming and North Dakota to serve the Rockies and beyond
        </p>
      </div>

      <!-- Interactive Leaflet Map -->
      <div class="bg-warm-white rounded-2xl shadow-soft-lg overflow-hidden border-4 border-white">
        <div id="map" class="w-full h-[600px]"></div>
      </div>

      <!-- Map Legend -->
      <div class="mt-8 bg-charcoal-800 p-6 rounded-xl shadow-soft-lg border border-white/10">
        <div class="flex flex-wrap gap-8 justify-center items-center">
          <div class="flex items-center gap-3">
            <div class="w-4 h-4 rounded-full bg-safety-orange"></div>
            <span class="text-white font-bold text-sm">Gillette, WY (HQ)</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-4 h-4 rounded-full bg-safety-orange"></div>
            <span class="text-white font-bold text-sm">Cheyenne, WY</span>
          </div>
          <div class="flex items-center gap-3">
            <div class="w-4 h-4 rounded-full bg-safety-orange"></div>
            <span class="text-white font-bold text-sm">Williston, ND</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Leaflet CSS -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin=""
  />

  <!-- Custom Map Script -->
  <script is:inline>
    // Store map instance globally to manage lifecycle
    window.contactMap = null;

    // eslint-disable-next-line @typescript-eslint/no-unused-vars
    function initializeMap() {
      // Check if Leaflet is loaded
      if (typeof L === 'undefined') {
        console.error('Leaflet library not loaded');
        return;
      }

      // Check if map container exists
      const mapContainer = document.getElementById('map');
      if (!mapContainer) {
        console.error('Map container not found');
        return;
      }

      // If map already exists and is initialized, remove it first
      if (window.contactMap) {
        try {
          window.contactMap.remove();
          window.contactMap = null;
        } catch (e) {
          console.log('Error removing old map:', e);
        }
      }

      // Clear any existing Leaflet instance from the container
      if (mapContainer._leaflet_id) {
        mapContainer._leaflet_id = null;
      }

      try {
        // Initialize the map centered on Wyoming/North Dakota region
        const map = L.map('map', {
          center: [45.5, -104.0],
          zoom: 6,
          scrollWheelZoom: true,
          dragging: true,
          zoomControl: true,
          preferCanvas: false,
        });

        // Store map instance globally
        window.contactMap = map;

        // Add modern tile layer with terrain
        L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
          attribution:
            '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
          subdomains: 'abcd',
          maxZoom: 20,
        }).addTo(map);

        // Custom orange marker icon
        const orangeIcon = L.divIcon({
          className: 'custom-marker',
          html: `
          <div style="
            position: relative;
            width: 40px;
            height: 40px;
          ">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                fill="#FF6600"
                stroke="#1A1A1A"
                stroke-width="0.5"/>
            </svg>
            <div style="
              position: absolute;
              top: 50%;
              left: 50%;
