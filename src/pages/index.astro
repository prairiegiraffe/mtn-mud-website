---
import Layout from '~/layouts/PageLayout.astro';

import BackgroundImageHero from '~/components/ui/page-sections/hero-sections/BackgroundImageHero';
import Features from '~/components/widgets/Features.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Brands from '~/components/widgets/Brands.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Stats from '~/components/widgets/Stats.astro';

const metadata = {
  title: 'MTN Mud - Service Based Drilling Fluids',
  description:
    'Your trusted partner for drilling fluids and mud engineering across the Rockies and beyond. 40+ years of excellence in the drilling fluids industry.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section ******************* -->
  <BackgroundImageHero
    client:load
    title="Service Based Drilling Fluids"
    subtitle="Your trusted partner for drilling fluids and mud engineering across the Rockies and beyond. 40+ years of excellence in the drilling fluids industry."
    ctaText="Get Started"
    ctaHref="/contact"
    secondaryCtaText="Learn More"
    secondaryCtaHref="#about"
    announcementText="40+ Years of Excellence in Drilling Fluids. Learn more"
    announcementHref="#about"
    backgroundImage="~/assets/images/hero-image.png"
    backgroundImageDark="~/assets/images/hero-image.png"
  />

  <!-- Introduction Section ******************* -->
  <Content
    id="about"
    columns={1}
    items={[]}
    image={{
      src: '~/assets/images/default.png',
      alt: 'MTN Mud Operations',
      loading: 'eager',
    }}
    classes={{
      container: 'max-w-6xl',
      panel: 'max-w-none',
      title: 'text-4xl md:text-5xl font-bold',
      subtitle: 'text-xl text-muted max-w-3xl mx-auto',
      content: 'text-center',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-4xl md:text-5xl font-bold mb-8 text-center">40 Years of Excellence in Drilling Fluids</h2>
      <p class="text-xl text-muted leading-relaxed text-center max-w-4xl mx-auto">
        Mountain Mud Service & Supply delivers exceptional, customer-specific service in the drilling fluids industry.
        We combine performance, economics, safety, and cutting-edge technology to provide unmatched value to our
        partners across Texas, Oklahoma, Colorado, and the Rocky Mountain region.
      </p>
    </Fragment>
  </Content>

  <!-- Key Differentiators Grid ******************* -->
  <Features
    id="differentiators"
    title="Why Choose MTN Mud"
    subtitle="Our commitment to excellence sets us apart in the drilling fluids industry"
    columns={3}
    items={[
      {
        title: 'Rapid Response',
        description:
          '24/7 service delivery with strategic locations across the Rockies ensuring quick response times to your drilling operations.',
        icon: 'tabler:truck-delivery',
      },
      {
        title: 'Safety First',
        description:
          'Unwavering commitment to safety with comprehensive training, protocols, and equipment to protect our team and yours.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Advanced Technology',
        description:
          'Cutting-edge technology and data-driven solutions to optimize drilling performance and reduce operational costs.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Expert Engineering',
        description:
          'Certified mud engineers with decades of experience providing technical expertise and custom solutions.',
        icon: 'tabler:flask',
      },
      {
        title: 'Quality Products',
        description:
          'Premium drilling fluids and chemical additives sourced from leading manufacturers and tested for performance.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Customer Partnership',
        description:
          'Long-term partnerships built on trust, reliability, and shared success in challenging drilling environments.',
        icon: 'tabler:users',
      },
    ]}
    classes={{
      container: 'max-w-6xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  />

  <!-- Services Overview ******************* -->
  <Features3
    title="Our Core Services"
    subtitle="Comprehensive drilling fluids solutions tailored to your specific needs"
    columns={4}
    isBeforeContent={true}
    items={[
      {
        title: 'Mud Engineering',
        description: 'Expert mud system design and on-site engineering support for optimal drilling performance.',
        image: {
          src: '~/assets/images/default.png',
          alt: 'Mud Engineering Services',
        },
      },
      {
        title: 'Drilling Fluids',
        description: 'High-performance drilling fluids for all geological conditions and drilling applications.',
        image: {
          src: '~/assets/images/default.png',
          alt: 'Drilling Fluids',
        },
      },
      {
        title: 'Chemical Additives',
        description: 'Specialized chemical additives to enhance drilling efficiency and wellbore stability.',
        image: {
          src: '~/assets/images/default.png',
          alt: 'Chemical Additives',
        },
      },
      {
        title: 'Lab Testing',
        description: 'Comprehensive laboratory testing and analysis to ensure optimal fluid properties.',
        image: {
          src: '~/assets/images/default.png',
          alt: 'Mud Lab Testing',
        },
      },
    ]}
    classes={{
      container: 'max-w-7xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  />

  <!-- Stats Section ******************* -->
  <Stats
    title="Proven Track Record"
    subtitle="Four decades of delivering results across the energy sector"
    stats={[
      { amount: '40+', title: 'Years of Experience' },
      { amount: '500+', title: 'Wells Serviced' },
      { amount: '4', title: 'States Covered' },
      { amount: '24/7', title: 'Emergency Response' },
    ]}
    classes={{
      container: 'max-w-6xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  />

  <!-- Client Logo Banner ******************* -->
  <Brands
    title="Trusted by Industry Leaders"
    subtitle="Proud to partner with leading energy companies across the region"
    icons={[]}
    images={[
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 1',
      },
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 2',
      },
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 3',
      },
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 4',
      },
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 5',
      },
    ]}
    classes={{
      container: 'max-w-6xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  />

  <!-- Bottom CTA Section ******************* -->
  <CallToAction
    title="Ready to Optimize Your Drilling Operations?"
    subtitle="Contact MTN Mud today for expert drilling fluids solutions and exceptional service across the Rockies"
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'View Services',
        href: '/services',
        icon: 'tabler:list',
      },
    ]}
    classes={{
      container: 'max-w-6xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-r from-charcoal to-gray-800"></div>
    </Fragment>
  </CallToAction>
</Layout>
