---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';

// Import images
import mtnMudBuildingExterior from '~/assets/images/new/Mtn Mud Building Exterior.webp';
import modernCoffeeLab from '~/assets/images/new/Modern Laboratory Interior.webp';
import industrialStorageTanks from '~/assets/images/new/Industrial Storage Tanks.webp';
import industrialFacility from '~/assets/images/new/Industrial Facility Aerial View.webp';
import warehouseInterior from '~/assets/images/new/Warehouse Interior With Forklift.webp';
import mtnMudTruck from '~/assets/images/new/Black Semi Truck With Tanker.webp';
import oilRigAtSunset from '~/assets/images/new/Oil Rig At Sunset.webp';

// Import partner logos
import logo1876 from '~/assets/images/Partners/1876 Resources.svg';
import logoAEC from '~/assets/images/Partners/AEC.svg';
import logoBallard from '~/assets/images/Partners/Ballard Petroleum.svg';
import logoChord from '~/assets/images/Partners/Chord Energy.svg';
import logoContinental from '~/assets/images/Partners/Continental Resources.svg';
import logoCrescent from '~/assets/images/Partners/Crescent Point.svg';
import logoDenbury from '~/assets/images/Partners/Denbury Inc.svg';
import logoDevon from '~/assets/images/Partners/Devon Energy.svg';
import logoEOG from '~/assets/images/Partners/EOG Resources.svg';
import logoEagleMountain from '~/assets/images/Partners/Eagle Mountain Energy.svg';
import logoHunt from '~/assets/images/Partners/Hunt Oil Compnay.svg';
import logoImpact from '~/assets/images/Partners/Impact Energy.svg';
import logoKoda from '~/assets/images/Partners/Koda.svg';
import logoMarlo from '~/assets/images/Partners/MARLO OPERATING COMPANY.svg';
import logoNorthSilo from '~/assets/images/Partners/NORTH SILO RESOURCES .svg';
import logoOildigger from '~/assets/images/Partners/OILDIGGER RESOURCES .svg';
import logoRockies from '~/assets/images/Partners/ROCKIES RESOURCES HOLDINGS .svg';
import logoRockport from '~/assets/images/Partners/ROCKPORT ENERGY .svg';
import logoSilverHills from '~/assets/images/Partners/Silver Hills Energy Operating.svg';
import logoWhiteRock from '~/assets/images/Partners/WHITE ROCK OIL & GAS.svg';
import logoXTO from '~/assets/images/Partners/XTO ENERGY .svg';
import logoZavanna from '~/assets/images/Partners/ZAVANNA, LLC.svg';

const partnerLogos = [
  logo1876, logoAEC, logoBallard, logoChord, logoContinental, logoCrescent,
  logoDenbury, logoDevon, logoEOG, logoEagleMountain, logoHunt, logoImpact,
  logoKoda, logoMarlo, logoNorthSilo, logoOildigger, logoRockies, logoRockport,
  logoSilverHills, logoWhiteRock, logoXTO, logoZavanna
];

const metadata = {
  title: 'MTN Mud - Service Based Drilling Fluids',
  description:
    'When drilling fluid challenges threaten your timeline and budget, you need a partner who delivers resultsâ€”not excuses. 40+ years of excellence serving the Rockies and beyond.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- SECTION 1: HERO - CENTERED WITH BACKGROUND VIDEO -->
  <section class="relative overflow-hidden min-h-screen flex items-center justify-center pt-32 pb-24">
    <!-- Background Video -->
    <div class="absolute inset-0">
      <video
        autoplay
        muted
        loop
        playsinline
        class="w-full h-full object-cover"
        aria-label="MTN Mud drilling operations"
      >
        <source src="/MTN MUD-Website-background loop-10.mp4" type="video/mp4" />
      </video>
      <!-- Dark Overlay -->
      <div class="absolute inset-0 bg-black/55"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 mx-auto max-w-5xl px-6 text-center">
      <h1 class="text-6xl md:text-7xl lg:text-8xl font-black tracking-tight text-white mb-6 leading-[1.05]">
        Service-Based<br />Drilling Fluids
      </h1>
      <p class="text-xl md:text-2xl text-white/90 leading-relaxed font-medium mb-12 max-w-3xl mx-auto">
        40+ years delivering expert solutions with zero lost-time accidents
      </p>

      <!-- CTA Buttons - Using the same style as Section 7 -->
      <div class="flex flex-col sm:flex-row gap-5 justify-center items-center">
        <a class="btn style2" href="/contact">Request Consultation <i class="ri-arrow-right-up-line"></i></a>
        <a class="btn style6" href="tel:307-682-8688">Call 307-682-8688 <i class="ri-phone-line"></i></a>
      </div>
    </div>
  </section>

  <!-- SECTION 2: VALUE PROPOSITION -->
  <section class="bg-charcoal-900">
    <div class="container mx-auto px-4 max-w-6xl p-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-black text-white tracking-tight mb-6">The MTN Mud Advantage</h2>
        <p class="text-xl text-warm-gray-200 max-w-3xl mx-auto">
          Service-based drilling fluids backed by decades of field expertise and unwavering reliability
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Advantage 1 -->
        <div
          class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-safety-orange/50 transition-all"
        >
          <div class="w-16 h-16 rounded-xl bg-safety-orange/10 flex items-center justify-center mb-6">
            <svg class="w-9 h-9 text-safety-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-black mb-4 text-white">Proven Safety Record</h3>
          <p class="text-warm-gray-300 leading-relaxed font-medium mb-4">
            Zero lost-time accidents since 2006. Safety isn't just a priorityâ€”it's our foundation.
          </p>
          <div class="text-safety-orange font-black text-sm uppercase tracking-wider">Industry-Leading</div>
        </div>

        <!-- Advantage 2 -->
        <div
          class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-safety-orange/50 transition-all"
        >
          <div class="w-16 h-16 rounded-xl bg-safety-orange/10 flex items-center justify-center mb-6">
            <svg class="w-9 h-9 text-safety-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 10V3L4 14h7v7l9-11h-7z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-black mb-4 text-white">24/7 Availability</h3>
          <p class="text-warm-gray-300 leading-relaxed font-medium mb-4">
            Private fleet, 24/7 delivery, and round-the-clock technical support. We're there when you need us.
          </p>
          <div class="text-safety-orange font-black text-sm uppercase tracking-wider">Always On Call</div>
        </div>

        <!-- Advantage 3 -->
        <div
          class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-safety-orange/50 transition-all"
        >
          <div class="w-16 h-16 rounded-xl bg-safety-orange/10 flex items-center justify-center mb-6">
            <svg class="w-9 h-9 text-safety-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
              ></path>
            </svg>
          </div>
          <h3 class="text-2xl font-black mb-4 text-white">Lab-Tested Solutions</h3>
          <p class="text-warm-gray-300 leading-relaxed font-medium mb-4">
            Every fluid system tested in our state-of-the-art labs before delivery. Science meets experience.
          </p>
          <div class="text-safety-orange font-black text-sm uppercase tracking-wider">Quality Assured</div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 3: CLIENT LOGOS -->
  <section class="bg-warm-white dark:bg-dark-bg">
    <div class="container mx-auto px-4 max-w-6xl text-center p-10">
      <h3 class="text-2xl md:text-3xl font-black mb-6 text-charcoal-900 dark:text-white">Trusted by Industry Leaders</h3>
      <p class="text-lg text-charcoal-500 dark:text-dark-text-muted mb-10 font-medium">
        Join the operators who rely on MTN Mud for their toughest drilling challenges
      </p>

      <!-- Logo Scroller -->
      <div class="relative overflow-hidden bg-warm-gray dark:bg-dark-bg-light py-10 rounded-2xl">
        <div class="flex gap-12 animate-scroll">
          <!-- First set of logos -->
          {
            partnerLogos.map((logo) => (
              <div class="flex-shrink-0 w-40 h-20 bg-white rounded-xl border border-warm-gray-300 flex items-center justify-center shadow-soft p-2">
                <img src={logo.src} alt="Partner logo" class="w-full h-full object-contain" />
              </div>
            ))
          }
          <!-- Duplicate set for seamless scroll -->
          {
            partnerLogos.map((logo) => (
              <div class="flex-shrink-0 w-40 h-20 bg-white rounded-xl border border-warm-gray-300 flex items-center justify-center shadow-soft p-2">
                <img src={logo.src} alt="Partner logo" class="w-full h-full object-contain" />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 4: GUIDE INTRO -->
  <section class="bg-warm-white dark:bg-dark-bg pb-10">
    <div class="container mx-auto px-4 max-w-6xl p-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-10">
        <!-- Left Column: Image -->
        <div class="order-2 lg:order-1">
          <Image
            src={industrialFacility}
            alt="Industrial facility aerial view"
            class="h-96 w-full rounded-2xl shadow-soft-lg object-cover"
          />
        </div>

        <!-- Right Column: Content -->
        <div class="order-1 lg:order-2">
          <h2 class="text-3xl md:text-4xl font-black mb-6 text-safety-orange dark:text-safety-orange leading-tight">
            We've Solved These Exact Problemsâ€”For 40 Years
          </h2>
          <p class="text-lg text-charcoal-600 dark:text-dark-text leading-relaxed mb-4 font-medium">
            Since 2006, MTN Mud has been the go-to partner when drilling operations face fluid challenges in the
            Rockies and beyond. We understand what's at stakeâ€”your timeline, your budget, your reputation.
          </p>
          <p class="text-lg text-charcoal-600 dark:text-dark-text leading-relaxed mb-10 pb-5 font-medium">
            That's why we've built our entire operation around one principle: Be there when our customers need us, with
            the expertise and products that actually work.
          </p>

          <!-- Stats -->
          <div class="grid grid-cols-3 gap-6">
            <div class="text-center bg-warm-gray rounded-xl p-4">
              <div class="text-4xl md:text-5xl font-black text-safety-orange mb-2 font-mono">0</div>
              <div class="text-xs font-bold text-charcoal-600 uppercase tracking-wider">
                Lost-Time Accidents Since 2006
              </div>
            </div>
            <div class="text-center bg-warm-gray rounded-xl p-4">
              <div class="text-4xl md:text-5xl font-black text-safety-orange mb-2 font-mono">24/7</div>
              <div class="text-xs font-bold text-charcoal-600 uppercase tracking-wider">
                Technical Support & Delivery
              </div>
            </div>
            <div class="text-center bg-warm-gray rounded-xl p-4">
              <div class="text-4xl md:text-5xl font-black text-safety-orange mb-2 font-mono">20K+</div>
              <div class="text-xs font-bold text-charcoal-600 uppercase tracking-wider">Barrels OBM In Stock</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 4: THE PLAN -->
  <section class="bg-charcoal-900 text-white">
    <div class="container mx-auto px-4 max-w-6xl text-center p-10">
      <h2 class="text-3xl md:text-4xl font-black mb-5 text-safety-orange leading-tight">
        Here's How We Solve Your Drilling Fluid Challenges
      </h2>
      <p class="text-lg text-white/80 mb-16 max-w-3xl mx-auto font-medium">
        A proven 3-step process that eliminates guesswork and gets your operation running at peak performance.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <!-- Step 1 -->
        <div
          class="bg-white/5 backdrop-blur-sm p-10 rounded-2xl border border-white/10 hover:border-safety-orange/50 transition-all shadow-soft-lg"
        >
          <div
            class="w-20 h-20 bg-safety-orange text-white rounded-2xl flex items-center justify-center text-3xl font-black mx-auto mb-6 font-mono shadow-orange-glow"
          >
            1
          </div>
          <h3 class="text-xl font-black mb-5 text-safety-orange">Analyze Your Challenge</h3>
          <p class="text-white/75 leading-relaxed font-medium">
            Share your drilling conditions, geological formation, and objectives. We'll use our mud lab and 40 years of
            field experience to design the optimal fluid system for your specific situation.
          </p>
        </div>

        <!-- Step 2 -->
        <div
          class="bg-white/5 backdrop-blur-sm p-10 rounded-2xl border border-white/10 hover:border-safety-orange/50 transition-all shadow-soft-lg"
        >
          <div
            class="w-20 h-20 bg-safety-orange text-white rounded-2xl flex items-center justify-center text-3xl font-black mx-auto mb-6 font-mono shadow-orange-glow"
          >
            2
          </div>
          <h3 class="text-xl font-black mb-5 text-safety-orange">Deploy Proven Solutions</h3>
          <p class="text-white/75 leading-relaxed font-medium">
            Get the right products delivered 24/7 from our strategically located facilities. Every fluid is pre-tested
            in our lab. Choose from on-site engineers to drive-by checksâ€”whatever level of support you need.
          </p>
        </div>

        <!-- Step 3 -->
        <div
          class="bg-white/5 backdrop-blur-sm p-10 rounded-2xl border border-white/10 hover:border-safety-orange/50 transition-all shadow-soft-lg"
        >
          <div
            class="w-20 h-20 bg-safety-orange text-white rounded-2xl flex items-center justify-center text-3xl font-black mx-auto mb-6 font-mono shadow-orange-glow"
          >
            3
          </div>
          <h3 class="text-xl font-black mb-5 text-safety-orange">Drill With Confidence</h3>
          <p class="text-white/75 leading-relaxed font-medium">
            Focus on drilling while we handle your fluid performance. Real-time monitoring, immediate troubleshooting,
            and expert adjustments keep your operation running smoothly from spud to TD.
          </p>
        </div>
      </div>

      <a class="btn style2" href="/contact">Start Your Project With Us <i class="ri-arrow-right-up-line"></i></a>
    </div>
  </section>

  <!-- SECTION 5: SUCCESS STORIES -->
  <section class="bg-warm-white dark:bg-dark-bg">
    <div class="container mx-auto px-4 max-w-6xl p-10">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-black mb-5 text-charcoal-900 dark:text-white tracking-tight">What Success Looks Like</h2>
        <p class="text-lg text-charcoal-500 dark:text-dark-text-muted max-w-3xl mx-auto font-medium">
          Real results from operators who trusted MTN Mud to solve their toughest drilling fluid challenges.
        </p>
      </div>

      <!-- Case Study 1 -->
      <div class="bg-warm-gray dark:bg-dark-bg-light border-l-4 border-safety-orange p-10 rounded-2xl mb-8 shadow-soft-lg">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            <div
              class="inline-block bg-safety-orange text-white px-4 py-2 rounded-lg text-xs font-black mb-5 uppercase tracking-wider"
            >
              Powder River Basin
            </div>
            <h3 class="text-2xl font-black mb-6 text-charcoal-900 dark:text-white">$450K+ Saved Across Multi-Well Pad</h3>

            <div class="mb-5">
              <h4 class="font-bold text-charcoal-900 dark:text-white mb-2">The Problem:</h4>
              <p class="text-charcoal-600 dark:text-dark-text leading-relaxed font-medium">
