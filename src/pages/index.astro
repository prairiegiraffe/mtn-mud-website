---
import Layout from '~/layouts/PageLayout.astro';

import BackgroundImageHero from '~/components/ui/page-sections/hero-sections/BackgroundImageHero';
import Features from '~/components/widgets/Features.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Brands from '~/components/widgets/Brands.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'MTN Mud - Service Based Drilling Fluids',
  description:
    'Your trusted partner for drilling fluids and mud engineering across the Rockies and beyond. 40+ years of excellence in the drilling fluids industry.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section ******************* -->
  <BackgroundImageHero
    client:load
    title="Service Based Drilling Fluids"
    subtitle="Your trusted partner for drilling fluids and mud engineering across the Rockies and beyond"
    ctaText="Get Started"
    ctaHref="/contact"
    secondaryCtaText="View Our Services"
    secondaryCtaHref="/services"
    announcementText="40+ Years of Excellence in Drilling Fluids. Learn more"
    announcementHref="#about"
    backgroundImage="/hero-image.png"
    backgroundImageDark="/hero-image.png"
  />

  <!-- Introduction Section ******************* -->
  <Content
    id="about"
    columns={1}
    items={[]}
    image={{
      src: '~/assets/images/default.png',
      alt: 'MTN Mud Operations',
      loading: 'eager',
    }}
    classes={{
      container: 'max-w-6xl',
      panel: 'max-w-none',
      title: 'text-4xl md:text-5xl font-bold',
      subtitle: 'text-xl text-muted max-w-3xl mx-auto',
      content: 'text-center',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-4xl md:text-5xl font-bold mb-8 text-center">40 Years of Excellence in Drilling Fluids</h2>
      <p class="text-xl text-muted leading-relaxed text-center max-w-4xl mx-auto">
        Mountain Mud Service & Supply delivers exceptional, customer-specific service in the drilling fluids industry.
        We combine performance, economics, safety, and cutting-edge technology to provide unmatched value to our
        partners across Texas, Oklahoma, Colorado, and the Rocky Mountain region.
      </p>
    </Fragment>
  </Content>

  <!-- Statistics Grid ******************* -->
  <Features
    id="statistics"
    columns={3}
    items={[
      {
        title: '24/7 Availability',
        description: '65+ vehicle private fleet',
        icon: 'tabler:truck-delivery',
      },
      {
        title: 'Perfect Safety',
        description: 'Zero lost time accidents since 2006',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Massive Inventory',
        description: '1M+ pounds bulk barite in stock',
        icon: 'tabler:box',
      },
      {
        title: 'Oil-Based Fluids',
        description: '20,000+ bbls ready to deliver',
        icon: 'tabler:droplet',
      },
      {
        title: 'Advanced Testing',
        description: 'Fully equipped mud labs',
        icon: 'tabler:flask',
      },
      {
        title: 'Regional Leader',
        description: "Powder River Basin's only full-service supplier",
        icon: 'tabler:award',
      },
    ]}
    classes={{
      container: 'max-w-7xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  />

  <!-- Services Preview ******************* -->
  <Features3
    title="Our Core Services"
    subtitle="Comprehensive drilling fluids solutions tailored to your specific needs"
    columns={4}
    isBeforeContent={true}
    items={[
      {
        title: 'Mud Engineering',
        description: '24-hour on-site support and technical expertise',
        image: {
          src: '~/assets/images/default.png',
          alt: 'Mud Engineering Services',
        },
      },
      {
        title: 'Products & Chemicals',
        description: 'Premium additives and specialty products',
        image: {
          src: '~/assets/images/default.png',
          alt: 'Products & Chemicals',
        },
      },
      {
        title: 'Logistics & Delivery',
        description: 'Private fleet available 24/7',
        image: {
          src: '~/assets/images/default.png',
          alt: 'Logistics & Delivery',
        },
      },
      {
        title: 'Testing & Analysis',
        description: 'State-of-the-art mud lab',
        image: {
          src: '~/assets/images/default.png',
          alt: 'Testing & Analysis',
        },
      },
    ]}
    classes={{
      container: 'max-w-7xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  />


  <!-- Client Logo Banner ******************* -->
  <Brands
    title="Trusted by Industry Leaders"
    subtitle="Proud to partner with leading energy companies across the region"
    icons={[]}
    images={[
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 1',
      },
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 2',
      },
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 3',
      },
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 4',
      },
      {
        src: '~/assets/images/default.png',
        alt: 'Client Logo 5',
      },
    ]}
    classes={{
      container: 'max-w-6xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  />

  <!-- Bottom CTA Section ******************* -->
  <CallToAction
    title="Ready to Optimize Your Drilling Operations?"
    subtitle="Partner with the Powder River Basin's only full-service drilling fluid supply company."
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'Download Product Sheets',
        href: '/products',
        icon: 'tabler:download',
      },
    ]}
    classes={{
      container: 'max-w-6xl',
      title: 'text-4xl md:text-5xl',
      subtitle: 'text-xl',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-r from-charcoal to-gray-800"></div>
    </Fragment>
  </CallToAction>
</Layout>
