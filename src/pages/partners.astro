const metadata = {
  title: 'Strategic Partners - Stronger Together | MTN MUD',
  description:
    'MTN MUD collaborates with industry-leading partners to provide comprehensive drilling fluids solutions and services. Strategic relationships delivering greater value and broader capabilities.',
};

// Placeholder partners - client will provide actual data
const partners = [
  {
    name: 'Partner Company Name',
    description:
      'Brief description of partnership, services provided together, and how this collaboration benefits our mutual customers. Focus on complementary capabilities and integrated solutions.',
    website: '#',
  },
