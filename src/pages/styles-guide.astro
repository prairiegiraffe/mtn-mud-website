---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';

const metadata = {
  title: 'Global Styles Guide — MTN Mud',
  description:
    'Complete documentation of all global styles, colors, and configuration settings in the MTN Mud website.',
};

// CSS Custom Properties from CustomStyles.astro
const cssCustomProperties = {
  light: {
    '--aw-font-sans': 'Roboto, Inter Variable',
    '--aw-font-serif': 'Roboto, Inter Variable',
    '--aw-font-heading': 'Roboto, Inter Variable',
    '--aw-color-primary': 'rgb(221 94 38)',
    '--aw-color-secondary': 'rgb(52 50 48)',
    '--aw-color-accent': 'rgb(221 94 38)',
    '--aw-color-orange': 'rgb(221 94 38)',
    '--aw-color-charcoal': 'rgb(52 50 48)',
    '--aw-color-text-heading': 'rgb(52 50 48)',
    '--aw-color-text-default': 'rgb(52 50 48)',
