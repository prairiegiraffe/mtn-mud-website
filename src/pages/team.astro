---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Our Team - The People Behind the Performance | MTN Mud',
  description:
    'Meet the Mountain Mud team. Decades of combined experience, zero lost-time accidents since 2006, and a genuine commitment to your success. Expert drilling fluids professionals available 24/7.',
};

// Placeholder team members - client will provide actual data
const teamMembers = [
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
];
---

<Layout metadata={metadata}>
  <!-- SECTION 1: HERO -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4 max-w-5xl text-center">
      <!-- Hero Image -->
      <div class="h-72 bg-gray-200 rounded-lg border-2 border-dashed border-gray-400 flex items-center justify-center mb-12">
        <span class="text-gray-500 text-center px-4">TEAM HERO - Team working together</span>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-charcoal">The People Behind the Performance</h1>
      <p class="text-lg text-gray-700 leading-relaxed max-w-4xl mx-auto">
        Our greatest asset isn't our equipment or our inventory—it's our people. With decades of combined experience and
        a genuine commitment to your success, the Mountain Mud team brings unmatched expertise, responsiveness, and
        partnership to every project.
      </p>
    </div>
  </section>

  <!-- SECTION 2: LEADERSHIP TEAM -->
  <section class="bg-light-gray py-16 md:py-24">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-3xl md:text-4xl font-bold mb-3 text-charcoal text-center">Leadership Team</h2>
      <p class="text-gray-600 text-center mb-12 italic">
        Leadership roster with headshots (KTM to provide at later date)
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          teamMembers.map((member) => (
            <div class="bg-white p-8 rounded-lg shadow-sm text-center">
              {/* Headshot placeholder */}
              <div class="w-64 h-64 mx-auto mb-6 bg-gray-200 rounded-full border-2 border-dashed border-gray-400 flex items-center justify-center">
                <span class="text-gray-500 text-sm">HEADSHOT PLACEHOLDER</span>
              </div>

              <h3 class="text-xl font-bold mb-2 text-safety-orange text-center">{member.name}</h3>
              <p class="text-gray-600 font-semibold mb-4 text-center">{member.title}</p>
              <p class="text-gray-700 leading-relaxed text-left">{member.bio}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- SECTION 3: WHAT MAKES US DIFFERENT -->
  <section class="bg-white py-16 md:py-24">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        {/* Left Column: Image */}
        <div>
          <div class="h-full min-h-96 bg-gray-200 rounded-lg border-2 border-dashed border-gray-400 flex items-center justify-center">
            <span class="text-gray-500 text-center px-4">TEAM PHOTO - Field work or office collaboration</span>
          </div>
        </div>

        {/* Right Column: Content */}
        <div class="space-y-6">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-charcoal">What Makes Our Team Different</h2>

          <div>
            <p class="text-lg text-gray-700 leading-relaxed">
              <span class="font-bold text-charcoal">Experience Meets Innovation:</span> Our team combines decades of hands-on
              field experience with cutting-edge technical knowledge. We've seen it all—and we know how to solve it.
            </p>
          </div>

          <div>
            <p class="text-lg text-gray-700 leading-relaxed">
              <span class="font-bold text-charcoal">Safety First, Always:</span> Zero lost-time accidents since January
              1, 2006. This isn't just a statistic—it's a reflection of our culture. Every team member goes home safely,
              every day.
            </p>
          </div>

          <div>
            <p class="text-lg text-gray-700 leading-relaxed">
              <span class="font-bold text-charcoal">Partnership Mindset:</span> We don't just work for you—we work with
              you. Your challenges become our challenges, and your success is our success. That's what true partnership
              looks like.
            </p>
          </div>

          <div>
            <p class="text-lg text-gray-700 leading-relaxed">
              <span class="font-bold text-charcoal">24/7 Commitment:</span> Drilling doesn't stop at 5 PM, and neither do
              we. Our team is available around the clock to support your operations, troubleshoot issues, and keep your
              project moving forward.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 4: JOIN OUR TEAM -->
  <section class="bg-light-gray py-16 md:py-24">
    <div class="container mx-auto px-4 max-w-4xl text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-safety-orange">Join Our Team</h2>
      <p class="text-lg text-gray-700 leading-relaxed mb-10 max-w-3xl mx-auto">
        We're always looking for talented professionals who share our commitment to service excellence, safety, and
        innovation. If you're passionate about drilling fluids and want to be part of a team that values your expertise
        and your family, we'd love to hear from you.
      </p>

      <a
        href="/careers"
        class="bg-safety-orange text-white px-10 py-4 rounded hover:bg-orange-600 transition-colors font-semibold text-lg inline-flex items-center justify-center"
      >
        View Open Positions
      </a>
    </div>
  </section>

  <!-- SECTION 5: CLIENT LOGOS -->
  <section class="bg-white py-16 md:py-24">
    <div class="container mx-auto px-4 max-w-6xl">
      <h3 class="text-2xl md:text-3xl font-bold text-center mb-3 text-charcoal">Trusted by Industry Leaders</h3>
      <p class="text-lg text-gray-600 text-center mb-12">Our Valued Clients & Partners</p>

      {/* Logo Scroller */}
      <div class="relative overflow-hidden bg-light-gray py-12 rounded-lg">
        <div class="flex animate-scroll">
          {/* First set of logos */}
          <div class="flex items-center gap-16 px-8">
            {
              Array.from({ length: 12 }).map((_, i) => (
                <div class="flex-shrink-0 w-40 h-20 bg-white rounded border-2 border-dashed border-gray-300 flex items-center justify-center">
                  <span class="text-gray-400 text-xs text-center">LOGO {i + 1}</span>
                </div>
              ))
            }
          </div>
          {/* Duplicate set for seamless scroll */}
          <div class="flex items-center gap-16 px-8">
            {
              Array.from({ length: 12 }).map((_, i) => (
                <div class="flex-shrink-0 w-40 h-20 bg-white rounded border-2 border-dashed border-gray-300 flex items-center justify-center">
                  <span class="text-gray-400 text-xs text-center">LOGO {i + 1}</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <p class="text-sm text-gray-500 text-center mt-6 italic">Logo list to be provided by MM</p>
    </div>
  </section>
</Layout>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>
