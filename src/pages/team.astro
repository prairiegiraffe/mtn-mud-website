---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';

// Image imports
import constructionSiteDiscussion from '~/assets/images/Construction Site Discussion.jpg';
import constructionWorkerPointing from '~/assets/images/Construction Worker Pointing.jpg';
import oilRigWorker from '~/assets/images/Oil Rig Worker.jpg';
import constructionWorkerOnSite from '~/assets/images/Construction Worker On Site.jpg';
import nighttimeOilRigWorker from '~/assets/images/Nighttime Oil Rig Worker.jpg';
import manStandingInFrontOfTruck from '~/assets/images/Man Standing In Front Of Truck.jpg';

const metadata = {
  title: 'Our Team - The People Behind the Performance | MTN Mud',
  description:
    'Meet the Mountain Mud team. Decades of combined experience, zero lost-time accidents since 2006, and a genuine commitment to your success. Expert drilling fluids professionals available 24/7.',
};

// Placeholder team members - client will provide actual data
const teamMembers = [
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
  {
    name: 'Team Member Name',
    title: 'Position Title',
    bio: 'Brief bio highlighting experience in drilling fluids industry, areas of expertise, and commitment to service excellence. Years with company and key accomplishments.',
  },
];
---

<Layout metadata={metadata}>
  <!-- SECTION 1: HERO - Centered with stats overlay -->
  <section class="relative bg-warm-white py-20 md:py-32">
    <div class="container mx-auto px-4 max-w-7xl">
      <!-- Top Content -->
      <div class="text-center mb-12">
        <div class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-6 uppercase tracking-wider">
          Our Greatest Asset
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black mb-8 text-charcoal-900 leading-tight tracking-tight">
          The People Behind<br />the Performance
        </h1>
        <p class="text-xl text-charcoal-700 leading-relaxed max-w-4xl mx-auto mb-12">
          Our greatest asset isn't our equipment or our inventory—it's our people. With decades of combined experience and a genuine commitment to your success, the Mountain Mud team brings unmatched expertise, responsiveness, and partnership to every project.
        </p>
      </div>

      <!-- Image Grid with Stats Overlay -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Large Image Left -->
        <div class="lg:col-span-2 relative rounded-2xl overflow-hidden shadow-soft-lg h-96 lg:h-auto">
          <Image
            src={constructionSiteDiscussion}
            alt="Mountain Mud team collaboration"
            class="w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-charcoal-900/90 via-charcoal-900/40 to-transparent"></div>
          <div class="absolute bottom-8 left-8 right-8">
            <div class="grid grid-cols-2 gap-6">
              <div>
                <div class="text-5xl font-black text-safety-orange mb-2 font-mono">0</div>
                <div class="text-sm font-bold text-white uppercase tracking-wider">Lost-Time Accidents Since 2006</div>
              </div>
              <div>
                <div class="text-5xl font-black text-safety-orange mb-2 font-mono">24/7</div>
                <div class="text-sm font-bold text-white uppercase tracking-wider">Expert Support Available</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Small Images Right -->
        <div class="space-y-6">
          <div class="relative rounded-2xl overflow-hidden shadow-soft-lg h-44">
            <Image
              src={constructionWorkerPointing}
              alt="Mountain Mud field engineer"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-charcoal-900/20"></div>
          </div>
          <div class="relative rounded-2xl overflow-hidden shadow-soft-lg h-44">
            <Image
              src={oilRigWorker}
              alt="Mountain Mud on-site specialist"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-charcoal-900/20"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 2: LEADERSHIP TEAM -->
  <section class="bg-charcoal-900 py-20 md:py-28">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="text-center mb-16">
        <div class="inline-block bg-safety-orange text-white px-4 py-2 rounded-lg text-xs font-black mb-4 uppercase tracking-wider">
          Meet the Team
        </div>
        <h2 class="text-4xl md:text-5xl font-black mb-4 text-white">Leadership Team</h2>
        <p class="text-warm-gray-300 text-center italic">
          Leadership roster with headshots (to be provided at later date)
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          teamMembers.map((member) => (
            <div class="bg-charcoal-800 rounded-2xl overflow-hidden shadow-soft-lg hover:shadow-soft-xl transition-all border border-white/10 hover:border-safety-orange/50 group">
              {/* Headshot placeholder */}
              <div class="aspect-square bg-charcoal-700 border-b border-white/10 flex items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-b from-transparent to-charcoal-900/40"></div>
                <span class="text-warm-gray-500 text-sm font-bold uppercase tracking-wider">Headshot Placeholder</span>
              </div>

              <div class="p-6">
                <h3 class="text-xl font-black mb-2 text-white uppercase tracking-tight group-hover:text-safety-orange transition-colors">{member.name}</h3>
                <p class="text-safety-orange font-bold mb-4 text-sm uppercase tracking-wider">{member.title}</p>
                <p class="text-warm-gray-300 leading-relaxed text-sm">{member.bio}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- SECTION 3: WHAT MAKES US DIFFERENT -->
  <section class="bg-warm-white py-20 md:py-28">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        {/* Right Column: Content */}
        <div class="order-2 lg:order-1">
          <div class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-6 uppercase tracking-wider">
            The MTN Mud Difference
          </div>
          <h2 class="text-4xl md:text-5xl font-black mb-10 text-charcoal-900">What Makes Our Team Different</h2>

          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-safety-orange rounded-xl flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <div>
                <p class="text-lg text-charcoal-700 leading-relaxed">
                  <span class="font-black text-charcoal-900 block mb-2 uppercase tracking-tight">Experience Meets Innovation</span>
                  Our team combines decades of hands-on field experience with cutting-edge technical knowledge. We've seen it all—and we know how to solve it.
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-safety-orange rounded-xl flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div>
                <p class="text-lg text-charcoal-700 leading-relaxed">
                  <span class="font-black text-charcoal-900 block mb-2 uppercase tracking-tight">Safety First, Always</span>
                  Zero lost-time accidents since January 1, 2006. This isn't just a statistic—it's a reflection of our culture. Every team member goes home safely, every day.
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-safety-orange rounded-xl flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-lg text-charcoal-700 leading-relaxed">
                  <span class="font-black text-charcoal-900 block mb-2 uppercase tracking-tight">Partnership Mindset</span>
                  We don't just work for you—we work with you. Your challenges become our challenges, and your success is our success. That's what true partnership looks like.
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-safety-orange rounded-xl flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-lg text-charcoal-700 leading-relaxed">
                  <span class="font-black text-charcoal-900 block mb-2 uppercase tracking-tight">24/7 Commitment</span>
                  Drilling doesn't stop at 5 PM, and neither do we. Our team is available around the clock to support your operations, troubleshoot issues, and keep your project moving forward.
                </p>
              </div>
            </div>
          </div>
        </div>

        {/* Left Column: Images */}
        <div class="order-1 lg:order-2 space-y-6">
          <div class="relative rounded-2xl overflow-hidden shadow-soft-lg">
            <Image
              src={constructionWorkerOnSite}
              alt="Mountain Mud team member on site"
              class="w-full h-80 object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-charcoal-900/40 to-transparent"></div>
          </div>
          <div class="grid grid-cols-2 gap-6">
            <div class="relative rounded-2xl overflow-hidden shadow-soft-lg">
              <Image
                src={nighttimeOilRigWorker}
                alt="24/7 field support"
                class="w-full h-48 object-cover"
              />
              <div class="absolute inset-0 bg-charcoal-900/20"></div>
            </div>
            <div class="relative rounded-2xl overflow-hidden shadow-soft-lg">
              <Image
                src={manStandingInFrontOfTruck}
                alt="Mountain Mud professional"
                class="w-full h-48 object-cover"
              />
              <div class="absolute inset-0 bg-charcoal-900/20"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 4: JOIN OUR TEAM -->
  <section class="bg-charcoal-900 py-20 md:py-28">
    <div class="container mx-auto px-4 max-w-5xl text-center">
      <div class="inline-block bg-safety-orange text-white px-4 py-2 rounded-lg text-xs font-black mb-6 uppercase tracking-wider">
        Careers
      </div>
      <h2 class="text-4xl md:text-5xl font-black mb-8 text-white">Join Our Team</h2>
      <p class="text-xl text-warm-gray-200 leading-relaxed mb-12 max-w-3xl mx-auto">
        We're always looking for talented professionals who share our commitment to service excellence, safety, and innovation. If you're passionate about drilling fluids and want to be part of a team that values your expertise and your family, we'd love to hear from you.
      </p>

      <a
        href="/careers"
        class="bg-safety-orange text-white px-10 py-5 rounded-xl hover:bg-orange-600 transition-all font-black text-lg inline-flex items-center justify-center shadow-soft-lg hover:shadow-soft-xl uppercase tracking-wider"
      >
        View Open Positions
      </a>
    </div>
  </section>

  <!-- SECTION 5: CLIENT LOGOS -->
  <section class="bg-warm-white py-20 md:py-28">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="text-center mb-12">
        <div class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-4 uppercase tracking-wider">
          Industry Partners
        </div>
        <h3 class="text-4xl md:text-5xl font-black mb-4 text-charcoal-900">Trusted by Industry Leaders</h3>
        <p class="text-lg text-charcoal-700">Our Valued Clients & Partners</p>
      </div>

      {/* Logo Scroller */}
      <div class="relative overflow-hidden bg-white py-12 rounded-2xl shadow-soft-lg border border-warm-gray-200">
        <div class="flex animate-scroll">
          {/* First set of logos */}
          <div class="flex items-center gap-16 px-8">
            {
              Array.from({ length: 12 }).map((_, i) => (
                <div class="flex-shrink-0 w-40 h-20 bg-warm-white rounded-xl border-2 border-dashed border-warm-gray-300 flex items-center justify-center">
                  <span class="text-warm-gray-400 text-xs text-center font-bold uppercase tracking-wider">Logo {i + 1}</span>
                </div>
              ))
            }
          </div>
          {/* Duplicate set for seamless scroll */}
          <div class="flex items-center gap-16 px-8">
            {
              Array.from({ length: 12 }).map((_, i) => (
                <div class="flex-shrink-0 w-40 h-20 bg-warm-white rounded-xl border-2 border-dashed border-warm-gray-300 flex items-center justify-center">
                  <span class="text-warm-gray-400 text-xs text-center font-bold uppercase tracking-wider">Logo {i + 1}</span>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <p class="text-sm text-warm-gray-500 text-center mt-6 italic">Logo list to be provided by MTN Mud</p>
    </div>
  </section>
</Layout>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>
