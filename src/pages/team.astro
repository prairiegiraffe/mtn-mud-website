---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';

// Image imports
import constructionSiteDiscussion from '~/assets/images/new/Warehouse Workers Discussing Inventory.webp';
import constructionWorkerPointing from '~/assets/images/new/Construction Worker Smiling Outdoors.webp';
import oilRigWorker from '~/assets/images/new/Industrial Worker at Night.webp';
import constructionWorkerOnSite from '~/assets/images/new/Construction Workers On Site.webp';
import nighttimeOilRigWorker from '~/assets/images/new/Oil Rig Worker At Dusk.webp';
import manStandingInFrontOfTruck from '~/assets/images/new/Man Standing In Front Of Truck.webp';
import constructionSiteLoader from '~/assets/images/new/Construction Site Loader.webp';

// Team member headshots
import adolfoPic from '~/assets/images/Team/Adolfo.webp';
import brentPic from '~/assets/images/Team/Brent.webp';
import chadPic from '~/assets/images/Team/Chad.webp';
import justinPic from '~/assets/images/Team/Justin.webp';
import mitchPic from '~/assets/images/Team/Mitch.webp';

// Import partner logos
import logo1876 from '~/assets/images/Partners/1876 Resources.svg';
import logoAEC from '~/assets/images/Partners/AEC.svg';
import logoBallard from '~/assets/images/Partners/Ballard Petroleum.svg';
import logoChord from '~/assets/images/Partners/Chord Energy.svg';
import logoContinental from '~/assets/images/Partners/Continental Resources.svg';
import logoCrescent from '~/assets/images/Partners/Crescent Point.svg';
import logoDenbury from '~/assets/images/Partners/Denbury Inc.svg';
import logoDevon from '~/assets/images/Partners/Devon Energy.svg';
import logoEOG from '~/assets/images/Partners/EOG Resources.svg';
import logoEagleMountain from '~/assets/images/Partners/Eagle Mountain Energy.svg';
import logoHunt from '~/assets/images/Partners/Hunt Oil Compnay.svg';
import logoImpact from '~/assets/images/Partners/Impact Energy.svg';
import logoKoda from '~/assets/images/Partners/Koda.svg';
import logoMarlo from '~/assets/images/Partners/MARLO OPERATING COMPANY.svg';
import logoNorthSilo from '~/assets/images/Partners/NORTH SILO RESOURCES .svg';
import logoOildigger from '~/assets/images/Partners/OILDIGGER RESOURCES .svg';
import logoRockies from '~/assets/images/Partners/ROCKIES RESOURCES HOLDINGS .svg';
import logoRockport from '~/assets/images/Partners/ROCKPORT ENERGY .svg';
import logoSilverHills from '~/assets/images/Partners/Silver Hills Energy Operating.svg';
import logoWhiteRock from '~/assets/images/Partners/WHITE ROCK OIL & GAS.svg';
import logoXTO from '~/assets/images/Partners/XTO ENERGY .svg';
import logoZavanna from '~/assets/images/Partners/ZAVANNA, LLC.svg';

const partnerLogos = [
  logo1876,
  logoAEC,
  logoBallard,
  logoChord,
  logoContinental,
  logoCrescent,
  logoDenbury,
  logoDevon,
  logoEOG,
  logoEagleMountain,
  logoHunt,
  logoImpact,
  logoKoda,
  logoMarlo,
  logoNorthSilo,
  logoOildigger,
  logoRockies,
  logoRockport,
  logoSilverHills,
  logoWhiteRock,
  logoXTO,
  logoZavanna,
];

const metadata = {
  title: 'Our Team - The People Behind the Performance | MTN MUD',
  description:
    'Meet the MTN MUD team. 20 years operating experience and a genuine commitment to your success. Expert drilling fluids professionals available 24/7.',
  ignoreTitleTemplate: true,
};

// Team members
const teamMembers = [
  {
    name: 'Brent Eischeid',
    title: 'Owner',
    photo: brentPic,
  },
  {
    name: 'Chad Eischeid',
    title: 'Owner',
    photo: chadPic,
  },
  {
    name: "Mitch O'Brien",
    title: 'Procurement Manager',
    photo: mitchPic,
  },
  {
    name: 'Justin Teppo',
    title: 'Operations Manager',
    photo: justinPic,
  },
  {
    name: 'Adolfo Bagnarello',
    title: 'Office Manager',
    photo: adolfoPic,
  },
];
---

<Layout metadata={metadata}>
  <!-- SECTION 1: HERO -->
  <section class="relative bg-charcoal-900 overflow-hidden min-h-[600px] md:min-h-[700px]">
    <!-- Background Image -->
    <div
      class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-60"
      style={`background-image: url('${constructionSiteDiscussion.src}');`}
    >
    </div>
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-charcoal-900/90 via-charcoal-900/70 to-transparent"></div>

    <div class="container mx-auto px-10 py-32 md:py-48 max-w-7xl relative z-10">
      <div class="max-w-3xl">
        <div
          class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-6 uppercase tracking-wider"
        >
          Our Greatest Asset
        </div>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-black mb-8 text-white leading-tight tracking-tight">
          The People Behind<br />the Performance
        </h1>
        <p class="text-xl md:text-2xl text-warm-gray-200 leading-relaxed mb-10">
          Our greatest asset isn't our equipment or our inventory—it's our people. 20 years operating experience and an
          unwavering commitment to your success.
        </p>

        <!-- Key Team Stats -->
        <div class="grid grid-cols-2 gap-4 mb-16">
          <div class="bg-white/5 backdrop-blur-sm p-4 rounded-xl text-center border border-white/10">
            <div class="text-5xl font-black text-safety-orange mb-2 font-mono">20</div>
            <div class="text-xs font-bold text-white/70 uppercase tracking-wider">Years Operating Experience</div>
          </div>
          <div class="bg-white/5 backdrop-blur-sm p-4 rounded-xl text-center border border-white/10">
            <div class="text-5xl font-black text-safety-orange mb-2 font-mono">24/7</div>
            <div class="text-xs font-bold text-white/70 uppercase tracking-wider">Expert Support Available</div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a class="btn style2" href="#leadership-team">Meet the Team <i class="ri-arrow-right-up-line"></i></a>
          <a class="btn style6" href="/careers">Join Our Team <i class="ri-user-add-line"></i></a>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 2: LEADERSHIP TEAM -->
  <section id="leadership-team" class="bg-warm-white p-10">
    <div class="container mx-auto max-w-7xl">
      <div class="text-center mb-16">
        <div
          class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-4 uppercase tracking-wider"
        >
          Meet the Team
        </div>
        <h2 class="text-4xl md:text-5xl font-black mb-6 text-charcoal-900">Leadership Team</h2>
        <p class="text-lg text-charcoal-600 max-w-3xl mx-auto">
          Experienced professionals dedicated to delivering excellence in drilling fluids and technical services.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          teamMembers.map((member) => (
            <div class="bg-charcoal-800 rounded-2xl overflow-hidden shadow-soft-lg hover:shadow-soft-xl transition-all border-l-4 border-safety-orange group">
              {/* Headshot */}
              <div class="aspect-square relative overflow-hidden">
                <Image src={member.photo} alt={`${member.name} - ${member.title}`} class="w-full h-full object-cover" />
                <div class="absolute inset-0 bg-gradient-to-b from-transparent to-charcoal-900/20" />
              </div>

              <div class="p-8">
                <h3 class="text-xl font-black mb-2 text-white uppercase tracking-tight group-hover:text-safety-orange transition-colors">
                  {member.name}
                </h3>
                <p class="text-safety-orange font-bold text-sm uppercase tracking-wider">{member.title}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- SECTION 3: TEAM IN ACTION -->
  <section class="bg-warm-gray p-10">
    <div class="container mx-auto max-w-7xl">
      <div class="text-center mb-16">
        <div
          class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-4 uppercase tracking-wider"
        >
          Team in Action
        </div>
        <h2 class="text-4xl md:text-5xl font-black mb-6 text-charcoal-900">Expertise You Can See</h2>
        <p class="text-lg text-charcoal-600 max-w-3xl mx-auto">
          From the field to the lab, our team delivers expert drilling fluids solutions around the clock.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Image 1 -->
        <div class="relative group overflow-hidden rounded-2xl shadow-soft-lg hover:shadow-soft-xl transition-all h-80">
          <div class="absolute inset-0 w-full h-full">
            <Image
              src={constructionWorkerPointing}
              alt="MTN Mud field engineer"
              class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300"
              style="display: block; width: 100%; height: 100%;"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-charcoal-900/90 via-charcoal-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <h3 class="text-xl font-black mb-2 text-white">Field Engineering</h3>
            <p class="text-white/95 font-medium text-sm">On-site expertise when you need it most</p>
          </div>
        </div>

        <!-- Image 2 -->
        <div class="relative group overflow-hidden rounded-2xl shadow-soft-lg hover:shadow-soft-xl transition-all h-80">
          <div class="absolute inset-0 w-full h-full">
            <Image
              src={oilRigWorker}
              alt="MTN Mud on-site specialist"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              style="display: block; width: 100%; height: 100%;"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-charcoal-900/90 via-charcoal-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <h3 class="text-xl font-black mb-2 text-white">Operations Excellence</h3>
            <p class="text-white/95 font-medium text-sm">Precision and safety in every operation</p>
          </div>
        </div>

        <!-- Image 3 -->
        <div class="relative group overflow-hidden rounded-2xl shadow-soft-lg hover:shadow-soft-xl transition-all h-80">
          <div class="absolute inset-0 w-full h-full">
            <Image
              src={nighttimeOilRigWorker}
              alt="24/7 field support"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              style="display: block; width: 100%; height: 100%;"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-charcoal-900/90 via-charcoal-900/40 to-transparent"></div>
          <div class="absolute inset-0 flex flex-col justify-end p-6">
            <h3 class="text-xl font-black mb-2 text-white">24/7 Support</h3>
            <p class="text-white/95 font-medium text-sm">Available around the clock for your success</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 4: WHAT MAKES US DIFFERENT -->
  <section class="bg-warm-white p-10">
    <div class="container mx-auto max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        {/* Left Column: Content */}
        <div>
          <div
            class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-6 uppercase tracking-wider"
          >
            The MTN MUD Difference
          </div>
          <h2 class="text-4xl md:text-5xl font-black mb-10 text-charcoal-900">What Makes Our Team Different</h2>

          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-safety-orange rounded-xl flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="text-lg text-charcoal-700 leading-relaxed">
                  <span class="font-black text-charcoal-900 block mb-2 uppercase tracking-tight"
                    >Experience Meets Innovation</span
                  >
                  Our team combines decades of hands-on field experience with cutting-edge technical knowledge. We've seen
                  it all—and we know how to solve it.
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-safety-orange rounded-xl flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="text-lg text-charcoal-700 leading-relaxed">
                  <span class="font-black text-charcoal-900 block mb-2 uppercase tracking-tight"
                    >Safety First, Always</span
                  >
                  Safety is a reflection of our culture. Every team member goes home safely, every day.
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-safety-orange rounded-xl flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="text-lg text-charcoal-700 leading-relaxed">
                  <span class="font-black text-charcoal-900 block mb-2 uppercase tracking-tight"
                    >Partnership Mindset</span
                  >
                  We don't just work for you—we work with you. Your challenges become our challenges, and your success is
                  our success. That's what true partnership looks like.
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-safety-orange rounded-xl flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-lg text-charcoal-700 leading-relaxed">
                  <span class="font-black text-charcoal-900 block mb-2 uppercase tracking-tight">24/7 Commitment</span>
                  Drilling doesn't stop at 5 PM, and neither do we. Our team is available around the clock to support your
                  operations, troubleshoot issues, and keep your project moving forward.
                </p>
              </div>
            </div>
          </div>
        </div>

        {/* Right Column: Images */}
        <div class="space-y-6">
          <div class="relative rounded-2xl overflow-hidden shadow-soft-lg h-80">
            <div class="absolute inset-0 w-full h-full">
              <Image
                src={constructionWorkerOnSite}
                alt="MTN Mud team member on site"
                class="w-full h-full object-cover"
                style="display: block; width: 100%; height: 100%;"
              />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-charcoal-900/40 to-transparent"></div>
          </div>
          <div class="grid grid-cols-2 gap-6">
            <div class="relative rounded-2xl overflow-hidden shadow-soft-lg h-48">
              <div class="absolute inset-0 w-full h-full">
                <Image
                  src={constructionSiteLoader}
                  alt="Team collaboration"
                  class="w-full h-full object-cover"
                  style="display: block; width: 100%; height: 100%;"
                />
              </div>
              <div class="absolute inset-0 bg-charcoal-900/20"></div>
            </div>
            <div class="relative rounded-2xl overflow-hidden shadow-soft-lg h-48">
              <div class="absolute inset-0 w-full h-full">
                <Image
                  src={manStandingInFrontOfTruck}
                  alt="MTN Mud professional"
                  class="w-full h-full object-cover"
                  style="display: block; width: 100%; height: 100%;"
                />
              </div>
              <div class="absolute inset-0 bg-charcoal-900/20"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 5: JOIN OUR TEAM -->
  <section class="bg-charcoal-900 p-10">
    <div class="container mx-auto max-w-5xl text-center">
      <div
        class="inline-block bg-safety-orange text-white px-4 py-2 rounded-lg text-xs font-black mb-6 uppercase tracking-wider"
      >
        Careers
      </div>
      <h2 class="text-4xl md:text-5xl font-black mb-8 text-white">Join Our Team</h2>
      <p class="text-xl text-warm-gray-200 leading-relaxed mb-12 max-w-3xl mx-auto">
        We're always looking for talented professionals who share our commitment to service excellence, safety, and
        innovation. If you're passionate about drilling fluids and want to be part of a team that values your expertise
        and your family, we'd love to hear from you.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a class="btn style2" href="/careers">View Open Positions <i class="ri-arrow-right-up-line"></i></a>
        <a class="btn style6" href="/contact">Contact Us <i class="ri-mail-line"></i></a>
      </div>
    </div>
  </section>

  <!-- SECTION 6: CLIENT LOGOS -->
  <section class="bg-white p-10">
    <div class="container mx-auto max-w-7xl">
      <div class="text-center mb-12">
        <div
          class="inline-block bg-safety-orange/10 text-safety-orange px-4 py-2 rounded-lg text-xs font-black mb-4 uppercase tracking-wider"
        >
          Industry Partners
        </div>
        <h3 class="text-4xl md:text-5xl font-black mb-4 text-charcoal-900">Trusted by Industry Leaders</h3>
        <p class="text-lg text-charcoal-700">Our Valued Clients & Partners</p>
      </div>

      {/* Logo Scroller */}
      <div class="relative overflow-hidden">
        <div class="flex animate-scroll">
          {/* First set of logos */}
          <div class="flex items-center gap-8 px-8">
            {
              partnerLogos.map((logo) => (
                <div class="flex-shrink-0 w-48 h-28 flex items-center justify-center p-6 bg-warm-gray-100 rounded-[10px] grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100">
                  <img src={logo.src} alt="Partner logo" class="w-full h-full object-contain" />
                </div>
              ))
            }
          </div>
          {/* Duplicate set for seamless scroll */}
          <div class="flex items-center gap-8 px-8">
            {
              partnerLogos.map((logo) => (
                <div class="flex-shrink-0 w-48 h-28 flex items-center justify-center p-6 bg-warm-gray-100 rounded-[10px] grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100">
                  <img src={logo.src} alt="Partner logo" class="w-full h-full object-contain" />
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>
