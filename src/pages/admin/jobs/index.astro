---
// Admin Jobs List
export const prerender = false;

import '~/assets/styles/tailwind.css';
import type { Job } from '~/lib/types';

const env = Astro.locals.runtime?.env;
const user = Astro.locals.user;
const DB = env?.DB;

let jobs: Job[] = [];

if (DB) {
  try {
    const result = await DB.prepare(
      `
      SELECT * FROM jobs ORDER BY sort_order, title
    `
    ).all();
    jobs = (result.results || []) as Job[];
  } catch (error) {
    console.error('Jobs load error:', error);
  }
}

const canEdit = user?.role !== 'viewer';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jobs - Admin - MTN MUD</title>
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class="bg-gray-100 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-[#1a1a2e] text-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex items-center gap-8">
            <a href="/admin" class="font-black text-xl text-[#ff6600]">MTN MUD</a>
            <div class="hidden md:flex gap-6">
              <a href="/admin" class="text-gray-300 hover:text-white">Dashboard</a>
              <a href="/admin/products" class="text-gray-300 hover:text-white">Products</a>
              <a href="/admin/jobs" class="text-white font-medium">Jobs</a>
              <a href="/admin/submissions" class="text-gray-300 hover:text-white">Submissions</a>
              {
                (user?.role === 'superadmin' || user?.role === 'agency' || user?.role === 'admin') && (
                  <a href="/admin/users" class="text-gray-300 hover:text-white">
                    Users
                  </a>
                )
              }
            </div>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-gray-400 text-sm">{user?.name}</span>
            <a href="/api/admin/logout" class="text-gray-300 hover:text-white text-sm bg-gray-800 px-3 py-1.5 rounded">
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header -->
      <div class="flex justify-between items-center mb-8">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Job Postings</h1>
          <p class="text-gray-600">{jobs.length} jobs</p>
        </div>
        {
          canEdit && (
            <button
              id="addJobBtn"
              class="bg-[#ff6600] hover:bg-[#ff7700] text-white px-4 py-2 rounded-lg font-semibold flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add Job
            </button>
          )
        }
      </div>

      <!-- Jobs Table (Desktop) -->
      <div class="hidden md:block bg-white rounded-xl shadow overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Locations</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order</th>
              {
                canEdit && (
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                  </th>
                )
              }
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            {
              jobs.map((job) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 font-medium text-gray-900">{job.title}</td>
                  <td class="px-6 py-4 text-gray-600">{job.locations}</td>
                  <td class="px-6 py-4">
                    <span
                      class={`inline-flex px-2 py-1 text-xs font-medium rounded ${
                        job.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'
                      }`}
                    >
                      {job.is_active ? 'Active' : 'Inactive'}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-gray-600">{job.sort_order}</td>
                  {canEdit && (
                    <td class="px-6 py-4 text-right">
                      <button
                        class="text-[#ff6600] hover:text-[#ff7700] font-medium mr-3 edit-btn"
                        data-id={job.id}
                        data-job={JSON.stringify(job)}
                      >
                        Edit
                      </button>
                      <button class="text-red-600 hover:text-red-700 font-medium delete-btn" data-id={job.id}>
                        Delete
                      </button>
                    </td>
                  )}
                </tr>
              ))
            }
          </tbody>
        </table>

        {
          jobs.length === 0 && (
            <div class="px-6 py-12 text-center text-gray-500">
              <p>No job postings yet</p>
              {canEdit && <p class="text-sm mt-1">Click "Add Job" to create your first job posting</p>}
            </div>
          )
        }
      </div>

      <!-- Jobs Cards (Mobile) -->
      <div class="md:hidden space-y-4">
        {
          jobs.map((job) => (
            <div class="bg-white rounded-xl shadow p-4">
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-semibold text-gray-900">{job.title}</h3>
                <span
                  class={`inline-flex px-2 py-1 text-xs font-medium rounded ${
                    job.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'
                  }`}
                >
                  {job.is_active ? 'Active' : 'Inactive'}
                </span>
              </div>
              <p class="text-sm text-gray-600 mb-3">{job.locations}</p>
              <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                <span class="text-xs text-gray-500">Order: {job.sort_order}</span>
                {canEdit && (
                  <div class="flex gap-3">
                    <button
                      class="text-[#ff6600] hover:text-[#ff7700] font-medium text-sm edit-btn"
                      data-id={job.id}
                      data-job={JSON.stringify(job)}
                    >
                      Edit
                    </button>
                    <button class="text-red-600 hover:text-red-700 font-medium text-sm delete-btn" data-id={job.id}>
                      Delete
                    </button>
                  </div>
                )}
              </div>
            </div>
          ))
        }
        {
          jobs.length === 0 && (
            <div class="bg-white rounded-xl shadow px-6 py-12 text-center text-gray-500">
              <p>No job postings yet</p>
              {canEdit && <p class="text-sm mt-1">Click "Add Job" to create your first job posting</p>}
            </div>
          )
        }
      </div>
    </main>

    <!-- Job Modal -->
    <div id="jobModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
      <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg mx-4 max-h-[90vh] overflow-y-auto">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
          <h2 id="modalTitle" class="text-lg font-semibold text-gray-900">Add Job</h2>
          <button id="closeModal" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <form id="jobForm" class="p-6 space-y-4">
          <input type="hidden" id="jobId" />

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Title *</label>
            <input
              type="text"
              id="jobTitle"
              required
              placeholder="e.g., Mud Engineer"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ff6600] focus:border-transparent"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Locations *</label>
            <input
              type="text"
              id="jobLocations"
              required
              placeholder="e.g., Gillette WY, Cheyenne WY, Williston ND"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ff6600] focus:border-transparent"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <textarea
              id="jobDescription"
              rows="4"
              placeholder="Job description..."
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ff6600] focus:border-transparent"
            ></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Sort Order</label>
            <input
              type="number"
              id="jobOrder"
              value="0"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ff6600] focus:border-transparent"
            />
          </div>

          <div class="flex items-center gap-2">
            <input type="checkbox" id="jobActive" checked class="w-4 h-4 text-[#ff6600] rounded" />
            <label for="jobActive" class="text-sm font-medium text-gray-700">Active (visible on careers page)</label>
          </div>

          <div id="errorMessage" class="hidden text-red-600 text-sm bg-red-50 p-3 rounded-lg"></div>

          <div class="flex justify-end gap-3 pt-4">
            <button type="button" id="cancelBtn" class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
              Cancel
            </button>
            <button type="submit" class="px-4 py-2 bg-[#ff6600] hover:bg-[#ff7700] text-white rounded-lg font-medium">
              Save Job
            </button>
          </div>
        </form>
      </div>
    </div>

    <script define:vars={{ canEdit }}>
      if (canEdit) {
        const modal = document.getElementById('jobModal');
        const form = document.getElementById('jobForm');
        const errorMessage = document.getElementById('errorMessage');

        // Open add modal
        document.getElementById('addJobBtn')?.addEventListener('click', () => {
          document.getElementById('modalTitle').textContent = 'Add Job';
          document.getElementById('jobId').value = '';
          form.reset();
          document.getElementById('jobActive').checked = true;
          modal.classList.remove('hidden');
          modal.classList.add('flex');
        });

        // Edit buttons
        document.querySelectorAll('.edit-btn').forEach((btn) => {
          btn.addEventListener('click', () => {
            const job = JSON.parse(btn.dataset.job);
            document.getElementById('modalTitle').textContent = 'Edit Job';
            document.getElementById('jobId').value = job.id;
            document.getElementById('jobTitle').value = job.title;
            document.getElementById('jobLocations').value = job.locations;
            document.getElementById('jobDescription').value = job.description || '';
            document.getElementById('jobOrder').value = job.sort_order || 0;
            document.getElementById('jobActive').checked = job.is_active === 1;
            modal.classList.remove('hidden');
            modal.classList.add('flex');
          });
        });

        // Delete buttons
        document.querySelectorAll('.delete-btn').forEach((btn) => {
          btn.addEventListener('click', async () => {
            if (!confirm('Are you sure you want to delete this job posting?')) return;

            try {
              const response = await fetch(`/api/admin/jobs/${btn.dataset.id}`, {
                method: 'DELETE',
              });
              if (response.ok) {
                window.location.reload();
              } else {
                const data = await response.json();
                alert(data.error || 'Failed to delete job');
              }
            } catch {
              alert('Failed to delete job');
            }
          });
        });

        // Close modal
        function closeModal() {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
          errorMessage.classList.add('hidden');
        }

        document.getElementById('closeModal')?.addEventListener('click', closeModal);
        document.getElementById('cancelBtn')?.addEventListener('click', closeModal);

        // Submit form
        form?.addEventListener('submit', async (e) => {
          e.preventDefault();
          errorMessage.classList.add('hidden');

          const id = document.getElementById('jobId').value;
          const data = {
            title: document.getElementById('jobTitle').value,
            locations: document.getElementById('jobLocations').value,
            description: document.getElementById('jobDescription').value,
            sort_order: parseInt(document.getElementById('jobOrder').value) || 0,
            is_active: document.getElementById('jobActive').checked,
          };

          try {
            const url = id ? `/api/admin/jobs/${id}` : '/api/admin/jobs';
            const method = id ? 'PUT' : 'POST';

            const response = await fetch(url, {
              method,
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(data),
            });

            const result = await response.json();

            if (response.ok && result.success) {
              window.location.reload();
            } else {
              errorMessage.textContent = result.error || 'Failed to save job';
              errorMessage.classList.remove('hidden');
            }
          } catch {
            errorMessage.textContent = 'Connection error';
            errorMessage.classList.remove('hidden');
          }
        });
      }
    </script>
  </body>
</html>
