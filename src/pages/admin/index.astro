---
// Admin Dashboard
export const prerender = false;

import '~/assets/styles/tailwind.css';
import type { Submission, DashboardStats } from '~/lib/types';

const env = Astro.locals.runtime?.env;
const user = Astro.locals.user;
const DB = env?.DB;
const tenantId = env?.TENANT_ID || 'mtn_mud';

// Get dashboard stats
let stats: DashboardStats = {
  products: { total: 0, in_stock: 0, out_of_stock: 0 },
  jobs: { total: 0, active: 0 },
  submissions: { total: 0, new_count: 0, contacts: 0, applications: 0 },
};

let recentSubmissions: Submission[] = [];

if (DB && user) {
  try {
    // Product stats
    const productStats = await DB.prepare(
      `
      SELECT
        COUNT(*) as total,
        SUM(CASE WHEN in_stock = 1 THEN 1 ELSE 0 END) as in_stock,
        SUM(CASE WHEN in_stock = 0 THEN 1 ELSE 0 END) as out_of_stock
      FROM products
    `
    ).first();

    if (productStats) {
      stats.products = productStats as typeof stats.products;
    }

    // Job stats
    const jobStats = await DB.prepare(
      `
      SELECT
        COUNT(*) as total,
        SUM(CASE WHEN is_active = 1 THEN 1 ELSE 0 END) as active
      FROM jobs
    `
    ).first();

    if (jobStats) {
      stats.jobs = jobStats as typeof stats.jobs;
    }

    // Submission stats (last 30 days)
    const canSeeAllTenants = user.role === 'superadmin' || user.role === 'agency';
    const submissionQuery = canSeeAllTenants
      ? `
        SELECT
          COUNT(*) as total,
          SUM(CASE WHEN status = 'new' THEN 1 ELSE 0 END) as new_count,
          SUM(CASE WHEN form_type = 'contact' THEN 1 ELSE 0 END) as contacts,
          SUM(CASE WHEN form_type = 'application' THEN 1 ELSE 0 END) as applications
        FROM submissions
        WHERE created_at > datetime('now', '-30 days')
      `
      : `
        SELECT
          COUNT(*) as total,
          SUM(CASE WHEN status = 'new' THEN 1 ELSE 0 END) as new_count,
          SUM(CASE WHEN form_type = 'contact' THEN 1 ELSE 0 END) as contacts,
          SUM(CASE WHEN form_type = 'application' THEN 1 ELSE 0 END) as applications
        FROM submissions
        WHERE tenant_id = ? AND created_at > datetime('now', '-30 days')
      `;

    const subStats = canSeeAllTenants
      ? await DB.prepare(submissionQuery).first()
      : await DB.prepare(submissionQuery).bind(tenantId).first();

    if (subStats) {
      stats.submissions = subStats as typeof stats.submissions;
    }

    // Recent submissions
    const recentQuery = canSeeAllTenants
      ? `
        SELECT * FROM submissions
        ORDER BY created_at DESC
        LIMIT 10
      `
      : `
        SELECT * FROM submissions
        WHERE tenant_id = ?
        ORDER BY created_at DESC
        LIMIT 10
      `;

    const recentResult = canSeeAllTenants
      ? await DB.prepare(recentQuery).all()
      : await DB.prepare(recentQuery).bind(tenantId).all();

    recentSubmissions = (recentResult.results || []) as Submission[];
  } catch (error) {
    console.error('Dashboard error:', error);
  }
}

// Format date helper
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    hour: 'numeric',
    minute: '2-digit',
  });
}

// Status badge color
function getStatusColor(status: string): string {
  const colors: Record<string, string> = {
    new: 'bg-yellow-100 text-yellow-800',
    reviewed: 'bg-blue-100 text-blue-800',
    contacted: 'bg-purple-100 text-purple-800',
    hired: 'bg-green-100 text-green-800',
    archived: 'bg-gray-100 text-gray-800',
  };
  return colors[status] || colors.new;
}
