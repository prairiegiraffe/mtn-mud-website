---
import Layout from '~/layouts/PageLayout.astro';

import type { MetaData } from '~/types';

export interface Props {
  frontmatter: {
    title?: string;
  };
}

const { frontmatter } = Astro.props;

const metadata: MetaData = {
  title: frontmatter?.title,
};
---

<Layout metadata={metadata}>
  <section class="bg-warm-white min-h-screen">
    <div class="container mx-auto px-6 sm:px-10 py-24 md:py-32 max-w-4xl">
      <h1 class="text-4xl md:text-5xl font-black mb-8 text-charcoal-900 tracking-tight">{frontmatter.title}</h1>
      <div
        class="prose prose-lg max-w-none prose-headings:font-black prose-headings:text-charcoal-900 prose-headings:tracking-tight prose-p:text-charcoal-600 prose-p:leading-relaxed prose-a:text-safety-orange prose-a:font-bold hover:prose-a:text-safety-orange-dark prose-strong:text-charcoal-900 prose-strong:font-black prose-ul:text-charcoal-600 prose-li:text-charcoal-600"
      >
        <slot />
      </div>
    </div>
  </section>
</Layout>
