---
// Modern industrial font pairing for MTN Mud
import '@fontsource-variable/work-sans';
import '@fontsource/space-grotesk/400.css';
import '@fontsource/space-grotesk/500.css';
import '@fontsource/space-grotesk/600.css';
import '@fontsource/space-grotesk/700.css';
---

<style is:inline>
  :root {
    /* Modern Font System */
    --aw-font-sans: 'Work Sans Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --aw-font-heading: 'Work Sans Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --aw-font-mono: 'Space Grotesk', 'SF Mono', Monaco, 'Courier New', monospace;

    /* MTN Mud Brand Colors - Enhanced */
    --aw-color-primary: rgb(221 94 38); /* Safety Orange #DD5E26 */
    --aw-color-secondary: rgb(52 50 48); /* Charcoal #343230 */
    --aw-color-accent: rgb(221 94 38); /* Safety Orange for accents */

    /* Extended Color Palette */
    --aw-color-safety-orange: rgb(221 94 38);
    --aw-color-safety-orange-light: rgb(245 163 121);
    --aw-color-safety-orange-dark: rgb(194 73 26);

    --aw-color-charcoal: rgb(52 50 48);
    --aw-color-charcoal-light: rgb(111 107 104);
    --aw-color-charcoal-dark: rgb(31 30 29);

    /* Warm Neutral Backgrounds */
    --aw-color-warm-white: rgb(253 252 251);
    --aw-color-warm-gray: rgb(247 246 244);
    --aw-color-warm-gray-100: rgb(238 236 234);
    --aw-color-warm-gray-200: rgb(224 221 217);

    /* Text colors for light mode */
    --aw-color-text-heading: rgb(52 50 48);
    --aw-color-text-default: rgb(52 50 48);
    --aw-color-text-muted: rgb(111 107 104);

    /* Background colors */
    --aw-color-bg-page: rgb(253 252 251); /* Warm white instead of pure white */
    --aw-color-bg-light: rgb(247 246 244); /* Warm gray background */
    --aw-color-bg-page-dark: rgb(52 50 48); /* Charcoal for dark sections */

    /* Selection styling */
    ::selection {
      background-color: rgb(221 94 38 / 20%);
      color: rgb(52 50 48);
    }
  }

  .dark {
    /* Modern Font System (same as light) */
    --aw-font-sans: 'Work Sans Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --aw-font-heading: 'Work Sans Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --aw-font-mono: 'Space Grotesk', 'SF Mono', Monaco, 'Courier New', monospace;

    /* MTN Mud Brand Colors in dark mode */
    --aw-color-primary: rgb(221 94 38);
    --aw-color-secondary: rgb(255 255 255);
    --aw-color-accent: rgb(221 94 38);

    --aw-color-safety-orange: rgb(221 94 38);
    --aw-color-safety-orange-light: rgb(245 163 121);
    --aw-color-safety-orange-dark: rgb(194 73 26);

    --aw-color-charcoal: rgb(52 50 48);
    --aw-color-warm-white: rgb(253 252 251);
    --aw-color-warm-gray: rgb(247 246 244);

    /* Text colors for dark mode */
    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(255 255 255 / 95%);
    --aw-color-text-muted: rgb(255 255 255 / 70%);

    /* Background for dark mode */
    --aw-color-bg-page: rgb(52 50 48);
    --aw-color-bg-light: rgb(74 71 68);

    ::selection {
      background-color: rgb(221 94 38 / 40%);
      color: rgb(255 255 255);
    }
  }

  /* Construz Template Button Overrides */
  /* Ensure style3 (black/dark) buttons have white text on hover */
  .btn.style3:hover,
  .btn.style3:focus,
  .btn.style3:active {
    color: #ffffff !important;
  }

  .btn.style3:hover i,
  .btn.style3:focus i,
  .btn.style3:active i {
    color: #ffffff !important;
  }

  /* Fix footer social buttons to have white icons on hover */
  .social-btn.style2 a:hover,
  .social-btn.style2 a:focus,
  .social-btn.style2 a:active {
    color: #ffffff !important;
  }

  .social-btn.style2 a:hover i,
  .social-btn.style2 a:focus i,
  .social-btn.style2 a:active i {
    color: #ffffff !important;
  }
</style>
