<style>
  /* ============================================
     FOOTER VARIABLES
     ============================================ */
  :root {
    --footer-bg: #1a1a1a;
    --footer-bottom-bg: #0a0a0a;
    --footer-text: rgba(255, 255, 255, 0.8);
    --footer-heading: #ffffff;
    --footer-orange: #ff6600;
    --footer-orange-dark: #e55a00;
  }

  /* ============================================
     FOOTER STRUCTURE
     ============================================ */
  .mtn-footer {
    background: var(--footer-bg);
    color: var(--footer-text);
    width: 100%;
  }

  .footer-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* ============================================
     MAIN FOOTER
     ============================================ */
  .footer-main {
    padding: 4rem 0 3rem;
  }

  .footer-logo-section {
    margin-bottom: 3rem;
    text-align: center;
  }

  .footer-logo-section img {
    height: 60px;
    width: auto;
  }

  /* ============================================
     FOOTER COLUMNS
     ============================================ */
  .footer-columns {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }

  .footer-column h3 {
    color: var(--footer-heading);
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-column p {
    color: var(--footer-text);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .footer-column a {
    color: var(--footer-text);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-column a:hover {
    color: var(--footer-orange);
  }

  /* About Section Specific */
  .footer-since {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--footer-orange);
    margin: 1.5rem 0;
    letter-spacing: 1px;
  }

  .footer-availability h4 {
    color: var(--footer-heading);
    font-size: 0.875rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
  }

  .footer-availability .highlight {
    color: var(--footer-orange);
    font-weight: 700;
  }

  /* Links Grid */
  .footer-links-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .footer-links-grid ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links-grid li {
    margin-bottom: 0.75rem;
  }

  .footer-links-grid a {
    display: inline-block;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .footer-links-grid a:hover {
    transform: translateX(5px);
  }

  /* Contact Info */
  .contact-info {
    font-weight: 600;
  }

  .contact-info a {
    color: var(--footer-orange);
    font-weight: 700;
    font-size: 1.125rem;
  }

  .contact-info a:hover {
    color: var(--footer-orange-dark);
  }

  .contact-info .subtitle {
    display: block;
    font-size: 0.875rem;
    color: var(--footer-text);
    font-weight: 400;
    margin-top: 0.25rem;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: var(--footer-heading);
    font-size: 1.25rem;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: var(--footer-orange);
    transform: translateY(-3px);
  }

  /* CTA Button */
  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9375rem;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    text-transform: uppercase;
  }

  .btn-orange {
    background: var(--footer-orange);
    color: #ffffff;
  }

  .btn-orange:hover {
    background: var(--footer-orange-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 102, 0, 0.4);
  }

  /* ============================================
     FOOTER BOTTOM
     ============================================ */
  .footer-bottom {
    background: var(--footer-bottom-bg);
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .copyright {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--footer-text);
  }

  .copyright a {
    color: var(--footer-orange);
    font-weight: 700;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .copyright a:hover {
    color: var(--footer-orange-dark);
  }

  .footer-legal-links {
    display: flex;
    gap: 2rem;
  }

  .footer-legal-links a {
    color: var(--footer-text);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .footer-legal-links a:hover {
    color: var(--footer-orange);
  }

  /* ============================================
     RESPONSIVE
     ============================================ */

  @media (max-width: 992px) {
    .footer-columns {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-container {
      padding: 0 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .footer-columns {
      grid-template-columns: 1fr;
    }

    .footer-main {
      padding: 3rem 0 2rem;
    }

    .footer-logo-section {
      margin-bottom: 2rem;
    }

    .footer-logo-section img {
      height: 50px;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-legal-links {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-links-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  @media (max-width: 640px) {
    .footer-container {
      padding: 0 1rem;
    }

    .footer-since {
      font-size: 2rem;
    }

    .social-links {
      justify-content: center;
    }

    .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
